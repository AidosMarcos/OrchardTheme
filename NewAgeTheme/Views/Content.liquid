{% assign products = Content["alias:products"] %}
{% assign home = Content["alias:homepage"] %}
{% assign store = Content["alias:store"] %}
{% assign about = Content["alias:about-us"] %}

<header class="masthead">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-lg-7 my-auto">
        <div class="header-content mx-auto">
          <h2 class="mb-5">{{ home.Content.BagPart.ContentItems.first.HtmlBodyPart.Html }}</h2>
          <a href="#store" class="btn btn-outline btn-xl js-scroll-trigger">{{ home.Content.BagPart.ContentItems.first.Product.Link.Text }}</a>
        </div>
      </div>
      <div class="col-lg-5 my-auto">
                <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                <img src="{{ home.Content.BagPart.ContentItems.first.Product.ProdImage.Paths.first | asset_url }}" class="img-fluid" alt="" />
                  </div>
              <div class="button">
                <!-- You can hook the "home button" to some JavaScript events or just remove it -->
      </div>
    </div>
  </div>
</header>

<section class="features" id="products">
  <div class="container">
    <div class="section-heading text-center">
      <h2>{{ home.Content.BagPart.ContentItems.last.TitlePart.Title }}</h2>
      <p class="text-muted">{{ home.Content.BagPart.ContentItems.last.HtmlBodyPart.Html }}</p>
      <hr/>
        </div>
    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">
          <div class="row">
            {% for prod in products.Content.BagPart.ContentItems %}
            <div class="col-lg-4">
              <div class="feature-item">
                <img class="prod-img" src="{{ prod.Product.ProdImage.Paths.first | asset_url | resize_url: 240, 240, boxpad }}"></img>
                <h3>{{ prod.TitlePart.Title }}</h3>
                <p class="text-muted">{{ prod.Product.ProdSubTitle.Text }}</p>
              </div>
            </div>
            {% endfor%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="cta" style="background-image:url({{ about.Content.Aboutus.AboutUsImage.Paths.first | asset_url }})">
      <div class="cta-content">
        <div class="container">
          <h2>{{ about.Content.Aboutus.Slogan.Text }}</h2><br/>
          {{ about.Content.HtmlBodyPart.Html | raw}}
        </div>
      </div>
      <div class="overlay"></div>
    </section>

<section class="contact bg-primary" id="store">
  <div class="container">
    <h2>
      {{ store.Content.Store.Subtitle.Text }}!
      <i class="fa fa-heart"></i>
    </h2>
    <ul class="list-inline list-social">
      {% for workday in store.Content.BagPart.ContentItems %}
      <li>
        {{ workday.Workinghours.Weekday.Text }} - {{ workday.TitlePart.Title }}
      </li>
      {% endfor %}
    </ul>
  </div>
</section>