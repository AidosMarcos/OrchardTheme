 {% for product in Model.ContentItem.Content.BagPart.ContentItems %}
<section class="page-section">
  <div class="container">
    <div class="product-item">
      <div class="product-item-title d-flex">
        <div class="bg-faded p-5 d-flex {% cycle 'ml-auto', 'mr-auto' %} rounded">
          <h2 class="section-heading mb-0">
            <span class="section-heading-upper">{{ product.Product.ProdSubTitle.Text }}</span>
            <span class="section-heading-lower">{{ product.TitlePart.Title }}</span>
          </h2>
          {% cycle '', '' %}
        </div>
      </div>
      <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="{{ product.Product.ProdImage.Paths.first | asset_url }}" alt="" />
      <div class="product-item-description  {% cycle 'mr-auto', 'ml-auto' %} d-flex ">
        <div class="bg-faded p-5 rounded">
          <p class="mb-0">
            {{product.HtmlBodyPart.Html }}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
{% endfor %}


